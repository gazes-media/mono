{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2022",
        "module": "commonjs",
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "old"]
}
